<html>
  <form action="/figures" method="post">
    <label>Name: </label><input type="text" name="figure[name]" id="figure_name">

    <h2>Titles</h2>

    <%@titles.each do |title|%>
      <input type="checkbox" name="figure[title_ids][]" value="<%=title.name%>" id="<%=title.id%>"><%=title.name%></input><br>
    <%end%>

    <br>

    <label>Create New Title: </label><br>
    <input type="text" name="title[name]" id="new_title"><br>

    <h2>Landmarks</h2>

    <%@landmarks.each do |landmark|%>
      <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>"><%=landmark.name%></input><br>
    <%end%>

    <br>

    <label>Create New Landmark: </label><br>
    <input type="text" name="landmark[name]" id="new_landmark">

    <br>
    <br>

    <input type="submit" value="Create New Figure">

  </form>

</html>
